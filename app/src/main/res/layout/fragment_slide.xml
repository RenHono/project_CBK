<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:orientation="vertical"
    tools:context="xyz.renhono.project_cbk.fragment.SlideFragment">

    <!-- TODO: Update blank fragment layout -->
    <RelativeLayout
        android:id="@+id/rltou"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:orientation="horizontal">


        <ImageView
            android:id="@+id/ivback"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:src="@mipmap/searchbackbtn" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="茶百科"
            android:textSize="25dp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/ivbackhome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:src="@mipmap/righttopbutton" />


    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:background="#3d9d01" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="7"
            android:padding="10dp">


            <EditText
                android:id="@+id/etguanjianzi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@mipmap/myedit"
                android:hint="关键字"
                android:paddingLeft="40dp" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:padding="5dp">

            <ImageView
                android:id="@+id/ivsearch"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="5dp"
                android:scaleType="fitXY"

                android:src="@mipmap/gosearch" />
        </RelativeLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/tvtea"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:text="热门搜索：茶"
        android:textStyle="bold" />

    <TextView
        android:layout_width="match_parent"

        android:layout_height="wrap_content"
        android:background="@mipmap/shoucangjia"
        android:padding="10dp"
        android:text="收藏夹" />

    <TextView
        android:id="@+id/tvmyfavo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:padding="10dp"
        android:text="我的收藏"
        android:textStyle="bold" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:padding="10dp"
        android:text="地图查询"
        android:textStyle="bold" />

    <TextView
        android:layout_width="match_parent"

        android:layout_height="wrap_content"
        android:background="@mipmap/guanyu"
        android:padding="10dp"
        android:text="关于客户端" />

    <TextView

        android:id="@+id/tvbanquan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:padding="10dp"
        android:text="版权信息"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tvfankui"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:padding="10dp"
        android:text="意见反馈"
        android:textStyle="bold" />
</LinearLayout>
